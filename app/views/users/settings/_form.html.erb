<h2><%= t('text.personal') %></h2>
<%= form_with model: user, url: user_setting_path(user), method: :put, class: 'c-form', data: { controller: 'theme', action: 'turbo:submit-end->theme#update' } do |form| %>
  <div class='c-form__field'>
    <%= form.label :theme %>
    <% User::AVAILABLE_THEME_OPTIONS.each do |option| %>
      <div class='c-form__radio'>
        <%= form.radio_button :theme, option, checked: user.theme == option, data: { theme: option, action: 'click->theme#select'} %>
        <%= form.label "theme_#{option}", option %>
      </div>
    <% end %>
  </div>
  <div class='c-form__field c-form__field--submit'>
    <%= form.submit t('label.save'), class: 'c-button c-button--primary c-button--full-width' %>
  </div>
<% end %>
