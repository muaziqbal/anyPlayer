<% if playlists.present? %>
  <div data-controller='infinite-scroll' data-infinite-scroll-container-value='.dialog__content' data-infinite-scroll-next-url-value='<%= pagy_next_url(pagy) %>'>
    <div id='js-dialog-playlists' data-action='click->dialog#hide' class='c-list'>
      <%= render partial: 'dialog/playlists/playlist', collection: playlists, cached: true %>
    </div>
    <div data-infinite-scroll-target='trigger' class='o-flex o-flex--justify-center u-my-small'>
      <% if pagy.next %>
        <%= loader_tag %>
      <% end %>
    </div>
  </div>
<% else %>
  <%= empty_alert_tag %>
<% end %>
