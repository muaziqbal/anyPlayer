<% if @pagy.page == 1 %>
  <% if params[:init] %>
    <%= render_playlist(render partial: 'show', locals: { next_url: "#{@pagy.next ? '/playlist/current?page=2' : ''}" }) %>
    App.player.updatePlaylist(JSON.parse('<%= j(render inline: @playlist.song_ids.to_json) %>'));
  <% else %>
    <%= render_playlist(render 'show') %>
  <% end %>
<% else %>
  App.appedNextPageContentTo('#js-playlist-list-content', '<%= j(render partial: 'songs', locals: { songs: @songs }) %>', '<%= pagy_next_url(@pagy) %>')
<% end %>
