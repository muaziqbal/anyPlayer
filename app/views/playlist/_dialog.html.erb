<section id='js-playlist-dialog' class='dialog hidden' data-controller='dialog'>
  <header class='dialog__header display__space-between'>
    <h2 class='dialog__title'><%= t('text.add_to_collection') %></h2>
    <span class='pointer-cursor' data-action='click->dialog#hide'>
      <%= icon_tag 'close' %>
    </span>
  </header>
  <div class='dialog__content position-relative'>
    <div id='js-playlist-dialog-content'>
    </div>
    <div id='js-playlist-dialog-loader' class='overlay display__justify-align-center hidden' data-controller='loader'>
      <%= loader_tag size: 'small' %>
    </div>
  </div>
</section>
