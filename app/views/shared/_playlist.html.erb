<div id='js-playlist' class='playlist u-h-100 o-flex' data-controller='ajax' data-ajax-loader='#js-playlist-loader'>
  <div id='js-playlist-nav' class='playlist__nav'>
    <%= render 'playlists/nav' %>
  </div>
  <div class='position-relative o-flex__item o-flex__item--grow-1 u-h-0 u-overflow-auto'>
    <div class='playlist__content' id='js-playlist-content'></div>
    <div id='js-playlist-loader' class='overlay hidden' data-controller='loader'>
      <%= loader_tag %>
    </div>
  </div>
</div>
