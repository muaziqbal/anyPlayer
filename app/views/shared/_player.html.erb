<div class='player' data-controller='player'>
  <div data-target='player.header' class='player__header'>
    <div class='heading'>
      <div class='heading__image'>
        <img data-target='player.image' class='image image--small' />
      </div>
      <div class='heading__body'>
        <div class='heading__body__text heading__body__text--main text-truncate' data-target='player.songName'></div>
        <div class='heading__body__text text-truncate' data-target='player.albumName'></div>
        <div class='heading__body__text text-truncate' data-target='player.artistName'></div>
        <div class='heading__body__text player__timer monospace-font'>
          <span class='player__timer__item player__timer__item--main' data-target='player.songTimer'></span>
          <span class='player__timer__item'>/</span>
          <span class='player__timer__item' data-target='player.songDuration'></span>
        </div>
      </div>
    </div>
    <progress data-target='player.progress' class='player__progress display__full-width display__flex' max='100'></progress>
  </div>
  <div class='player__control display__space-between'>
    <div class='player__control__minor pointer-cursor' data-action='click->player#nextMode'>
      <span data-target='player.modeButton'><%= icon_tag 'repeat' %></span>
      <span data-target='player.modeButton'><%= icon_tag 'repeat-one' %></span>
      <span data-target='player.modeButton'><%= icon_tag 'shuffle' %></span>
    </div>
    <div>
      <span class='pointer-cursor' data-action='click->player#previous'><%= icon_tag 'rewind', size: 'large' %></span>
      <span data-action='click->player#play' class='player__control__main pointer-cursor' data-target='player.playButton'><%= icon_tag 'play', size: 'large' %></span>
      <span data-action='click->player#pause' class='player__control__main pointer-cursor hidden' data-target='player.pauseButton'><%= icon_tag 'pause', size: 'large' %></span>
      <span data-action='click->player#next' class='pointer-cursor'><%= icon_tag 'fast-forward', size: 'large' %></span>
    </div>
    <div data-target='player.favoriteButton' data-action='click->player#toggleFavorite' class='player__control__minor pointer-cursor'>
      <%= icon_tag 'heart' %>
    </div>
  </div>
</div>
