<details class='c-dropdown'>
  <summary class='c-button c-button--outline c-button--small u-mr-small'>
    <span class='o-flex o-flex--align-center'>
      <%= t('label.genre') %>
      <%= icon_tag 'expand-more' %>
    </span>
  </summary>
  <%= turbo_frame_tag "turbo-genre-filter", class: 'c-dropdown__list', src: albums_filter_genres_path, loading: 'lazy' do %>
    <div class='o-flex o-flex--justify-center u-p-medium'>
      <%= loader_tag size: 'small' %>
    </div>
  <% end %>
</details>

