<li class='c-list__item o-flex o-flex--justify-between u-cursor-pointer' data-target='playlist-songs.item' data-song-id='<%= song.id %>' data-playlist-songs-action='play'>
  <div class='u-mr-narrow'>
    <div class='u-mb-tiny u-text-weight-bold u-text-line-clamp-2'><%= song.name %></div>
    <%= song.artist.title %>
  </div>
  <div class='o-flex o-flex--align-center'>
    <div class='u-text-monospace u-mr-narrow'><%= format_duration(song.length) %></div>
    <div class='c-dropdown js-playlist-songs-menu'>
      <span data-playlist-songs-action='showMenu'><%= icon_tag 'more-vertical', size: 'small', title: t('label.more') %></span>
      <div class='u-display-none c-dropdown__list js-playlist-songs-menu-list'>
        <a class='c-dropdown__item' data-playlist-songs-action='showPlaylistsDialog'><%= t('text.add_to_playlist') %></a>
        <a class='c-dropdown__item' data-playlist-songs-action='delete'><%= t('label.delete') %></a>
      </div>
    </div>
  </div>
</li>
