<div data-controller='infinite-scroll' data-infinite-scroll-url-value='<%= playlist_songs_path(playlist) %>' data-infinite-scroll-total-pages-value='<%= @pagy.pages %>'>
  <ul data-controller='playlist-sortable' class='c-list c-list--border-none' id='turbo-playlist-list-content' data-action='click->playlist-songs#actionHandler' data-playlist-sortable-playlist-id-value='<%= playlist.id %>'>
    <%= render partial: 'playlists/songs/song', collection: songs, cached: true %>
  </ul>
  <div data-infinite-scroll-target='trigger' class='o-flex o-flex--justify-center u-my-small'>
    <% if pagy.next %>
      <%= loader_tag %>
    <% end %>
  </div>
</div>
