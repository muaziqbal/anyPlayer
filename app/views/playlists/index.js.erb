<% if @pagy.page == 1 %>
  // If it's first page just render whole list content, avoid to add old playlist content to the new one.
  <%= render_playlist(render partial: 'playlists/index', locals: { playlists: @playlists, pagy: @pagy }) %>
<% else %>
  App.appedNextPageContentTo('#js-playlist-list', '<%= j(render partial: 'playlists/playlist', collection: @playlists, cached: true) %>', '<%= pagy_next_url(@pagy) %>')
<% end %>
