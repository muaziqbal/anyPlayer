<div class='o-grid__item'>
  <div class='c-card u-mb-large'>
    <%= link_to artist_path(artist), class: 'c-card__image' do %>
      <%= image_tag image_url_for(artist), class: 'u-border-circle' %>
    <% end %>
    <div class='c-card__body u-text-align-center'>
      <p class='c-card__body__text u-text-truncate u-text-weight-bold'><%= link_to artist.title, artist_path(artist) %></p>
    </div>
  </div>
</div>
