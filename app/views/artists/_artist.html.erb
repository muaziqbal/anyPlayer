<div class='o-grid__item c-card u-mb-medium'>
  <%= link_to artist_path(artist), class: 'c-card__image' do %>
    <%= image_tag image_url_for(artist), class: 'u-border-circle u-image-fluid' %>
  <% end %>
  <div class='c-card__body u-text-align-center'>
    <p class='c-card__body__text u-text-weight-bold u-text-line-clamp-2'><%= link_to artist.title, artist_path(artist) %></p>
  </div>
</div>
