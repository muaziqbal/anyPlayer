<div class='artist__header'>
  <div class='heading'>
    <div class='heading__image heading__image--medium'>
      <%= image_tag image_url_for(@artist, size: 'medium') %>
    </div>
    <div class='heading__body'>
      <div class='heading__body__text heading__body__text--main'><%= @artist.name %></div>
      <div class='heading__body__text'>
        <span><%= @artist.albums.size %> <%= t('label.albums') %></span>
        <span>,</span>
        <span><%= @artist.songs.size %> <%= t('label.songs')%></span>
      </div>
    </div>
  </div>
</div>
<div class='artist__content' data-controller='infinite-scroll' data-infinite-scroll-container='.layout__main' data-infinite-scroll-next-url='<%= pagy_next_url(@pagy) %>'>
  <div class='display__space-between display__flex-wrap' id='js-albums-content'>
    <%= render partial: 'albums/albums', locals: { albums: @albums } %>
  </div>
  <div data-target='infinite-scroll.trigger'>
    <% if @pagy.next %>
      <%= spinner_tag %>
    <% end %>
  </div>
</div>
