<% if @artists.empty? %>
  <div class='u-mt-wide'>
    <%= empty_alert_tag has_icon: true, has_overlay: false %>
  </div>
<% else %>
  <div data-controller='infinite-scroll' data-infinite-scroll-url-value='<%= artists_path %>' data-infinite-scroll-total-pages-value='<%= @pagy.pages %>'>
    <%= shelf_grid_tag class: 'o-container o-container--large', id: 'turbo-artists-content' do %>
      <%= render partial: 'artists/artist', collection: @artists, cached: true %>
    <% end %>
    <div data-infinite-scroll-target='trigger' class='o-flex o-flex--justify-center u-my-small'>
      <% if @pagy.next %>
        <%= loader_tag %>
      <% end %>
    </div>
  </div>
<% end %>
